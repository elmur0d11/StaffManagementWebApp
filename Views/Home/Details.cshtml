@model HomeDetailsViewModel
@{
    ViewBag.Title = "Staff Details";
    var photoFilePath = "~/images/" + (Model.Staff.PhotoFilePath ?? "user.jpg");
}

<div class="row row-cols-md-2 justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Staff.FirstName @Model.Staff.LastName</h3>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoFilePath" asp-append-version="true" />

                <h4>Staff ID : @Model.Staff.Id</h4>
                <h4>Email : @Model.Staff.Email</h4>
                <h4>Department : @Model.Staff.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-Id="@Model.Staff.Id" class="btn btn-primary">Edit</a>
                <form asp-controller="home" asp-action="delete" asp-route-Id="@Model.Staff.Id" method="post">
                    <button type="submit" class="btn btn-danger m-1" onclick="return confirm('Are you sure to delete this record?');">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
